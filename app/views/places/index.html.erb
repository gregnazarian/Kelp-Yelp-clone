<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
    <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img alt="Slider1" class="img-responsive" src="/assets/images/slider1.jpg">
      <div class="carousel-caption img-responsive">
        <%= image_tag 'slider1.jpg', class: 'd-block img-fluid' %>
        Find the best restaurants in town
      </div>
    </div>
    <div class="item">
      <img alt="Slider2" class="img-responsive" src="/assets/images/slider2.jpg">
      <div class="carousel-caption img-responsive">
        Looking for a place to meet friends?
      </div>
    </div>
  
  </div>
<div class="clear"></div>
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
        <i><%= place.address %></i><br /><br/>
        <p><%= place.description %></p><br />
        <% if place.user.present? %>
          <small><%= place.user.email %></small>
        <% end %>
                    <% if place.comments.present? %>
                        <div class="col-12">
                            <blockquote>
                                <% if place.comments.last.humanized_rating.present? %>
                                  <b><%= place.comments.last.humanized_rating %></b> -
                                <% end %>
                                   <%= place.comments.last.message %>
                              <small><%= place.comments.last.user.email %> </small>
                          </blockquote>
                        </div>
                      <% end %>

    
  </div>

  

  <hr />
<% end %>
<div class="pagination">
<%= will_paginate @places, renderer: BootstrapPagination::Rails %>
</div>